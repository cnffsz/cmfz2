<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.baizhi.dao.ChapterDao">
    <insert id="save" parameterType="Chapter">
        INSERT INTO banner
        VALUES(#{id},#{title},#{duration},#{size},#{audioPath},#{children.id})
    </insert>

    <select id="queryAll" resultType="Chapter">
      SELECT id,title,duration,size,audioPath,album_id
      FROM  chapter
    </select>


    <select id="queryByPage" resultType="Chapter">
        SELECT id,title,imgPath,description,status,createDate
        FROM chapter
        limit #{begin},#{end}

    </select>

    <select id="count" resultType="int">
        select count(*)
        FROM   chapter
    </select>
</mapper>







